{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Better Resource Monitor",
  "version": "1.0.3",
  "identifier": "dev.alexpedersen.better-resource-monitor",
  "build": {
    "frontendDist": null
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg"],
    "category": "Utility",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "infoPlist": "Info.plist",
      "entitlements": "Entitlements.plist",
      "minimumSystemVersion": "11.0"
    },
    "linux": {
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libayatana-appindicator3-1"],
        "section": "utils"
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  }
}
