---
import { getCollection, render } from "astro:content";
import Layout from "../layouts/Layout.astro";

const docs = await getCollection("docs");
const readme = docs[0];
const { Content } = await render(readme);

const title = "Better Resource Monitor - System Monitor for macOS & Linux";
const description =
  "A lightweight menu bar system monitor for macOS and Linux built with Rust and Tauri.";
---

<Layout title={title} description={description} showBackLink={false}>
  <style is:global>
    /* Hero image - full width */
    p[align="center"] img[alt="Better Resource Monitor"] {
      width: 100%;
      max-width: 100%;
      height: auto;
    }


    p[align="center"]:has(img[src*="/badges/"]) {
      display: flex;
      justify-content: center;
      gap: var(--space-4);
      height: 60px;
      padding-top: var(--space-4);
      box-sizing: content-box;
      a{
        line-height: 1;
      }
      img {
        width: auto;
        height: 100%;
      }
    }

    @media (max-width: 600px) {
      .container {
        padding: 0 var(--space-4);
      }
      p[align="center"]:has(img[src*="/badges/"]) {
        display: flex;
        gap: var(--space-4);
        height: auto;
        flex-wrap: wrap;
      }

      /* Hero links: stack and hide dots */
      p[align="center"]:has(a[href="#features"]) {
        display: flex;
        flex-direction: column;
        gap: var(--space-3);
        font-size: 0;
      }

      p[align="center"]:has(a[href="#features"]) a {
        font-size: var(--fs-base);
        display: block;
        padding: var(--space-2);
        background: var(--c-surface);
        border: var(--border-width) solid var(--c-border);
        text-decoration: none;
        text-align: center;
        color: var(--c-text-dim);
      }

      p[align="center"]:has(a[href="#features"]) a:hover {
        border-color: var(--c-accent);
        color: var(--c-accent);
        background: var(--c-surface);
      }

      p[align="center"]:has(a[href="#features"]) span {
        display: none;
      }
    }
  </style>

  <main class="container">
    <article>
      <Content />
    </article>
  </main>
</Layout>
