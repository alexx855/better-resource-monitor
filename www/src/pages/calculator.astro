---
import Layout from '../layouts/Layout.astro';
import ResourceCalculator from '../components/ResourceCalculator';

const title = 'Resource Calculator - Silicon Monitor';
const description = 'Interactive resource usage simulator for Silicon Monitor.';
---

<Layout title={title} description={description}>
  <main class="min-h-screen bg-[#0a0a0b] flex items-center justify-center p-4">
    <ResourceCalculator client:only="react" />
  </main>
</Layout>
