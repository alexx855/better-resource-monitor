---
import { ClientRouter } from "astro:transitions";

interface Props {
  title: string;
  description: string;
  showBackLink?: boolean;
}

const { title, description, showBackLink = true } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="author" content="Alex Pedersen" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={new URL(Astro.url.pathname, Astro.site)} />
    <meta property="og:image" content={new URL("/og.png", Astro.site).href} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@alexx855" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL("/og.png", Astro.site).href} />

    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="canonical" href={new URL(Astro.url.pathname, Astro.site)} />
    <meta name="robots" content="index, follow" />
    <title>{title}</title>
    <ClientRouter />

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "SoftwareApplication",
      "name": "Better Resource Monitor",
      "description": description,
      "applicationCategory": "UtilitiesApplication",
      "applicationSubCategory": "System Monitor",
      "operatingSystem": "macOS, Linux",
      "offers": { "@type": "Offer", "price": "0", "priceCurrency": "USD" },
      "author": { "@type": "Person", "name": "Alex Pedersen", "url": "https://github.com/alexx855" },
      "downloadUrl": "https://apps.apple.com/app/better-resource-monitor/id6758237306",
      "featureList": "Cross-Platform, Lightweight, GPU Monitoring, Theme Aware, Configurable, Private",
      "screenshot": new URL("/og.png", Astro.site).href,
      "codeRepository": "https://github.com/alexx855/better-resource-monitor",
      "license": "https://opensource.org/licenses/MIT"
    })} />

    <style is:global>
      :root {
        /* Colors */
        --c-bg: #181818;
        --c-surface: #202020;
        --c-surface-alt: #242424;
        --c-border: #3a3a3a;
        --c-accent: #edbc63;
        --c-text: #fff;
        --c-text-dim: #c5c5c5;

        /* Spacing */
        --space-1: 4px;
        --space-2: 8px;
        --space-3: 12px;
        --space-4: 16px;
        --space-4: 24px;
        --space-6: 32px;
        --space-10: 64px;

        /* Layout */
        --max-width: 900px;
        --touch-target: 44px;
        --border-width: 1px;
        --border-width-thick: 4px;

        /* Typography */
        --fs-xs: 0.75rem;
        --fs-sm: 0.875rem;
        --fs-base: 1rem;
        --fs-md: 1.25rem;
        --fs-lg: 1.5rem;
        --fs-xl: 2rem;
        --fs-2xl: 3rem;

        /* Font */
        --font-mono: ui-monospace, "Cascadia Code", "Source Code Pro", menlo,
          monospace;

        /* Transitions */
        --transition-fast: 0.1s ease;
      }

      /* Base reset */
      *,
      *::before,
      *::after {
        box-sizing: border-box;
      }
      html,
      body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
      }
      img,
      video,
      iframe {
        max-width: 100%;
        height: auto;
      }

      body {
        font: 400 16px/1.6 var(--font-mono);
        background: var(--c-bg);
        color: var(--c-text);
        -webkit-font-smoothing: antialiased;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      @media (min-width: 700px) {
        body {
          font-size: 17px;
        }
      }
      @media (min-width: 1100px) {
        body {
          font-size: 18px;
        }
      }

      /* Typography */
      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        font: inherit;
        font-weight: 600;
        line-height: 1.2;
        color: var(--c-text);
        margin: 0 0 var(--space-4);
        padding-top:  var(--space-4);
      }

      h1 {
        font-size: var(--fs-2xl);
      }

      h2 {
        font-size: var(--fs-xl);
      }

      h3 {
        font-size: var(--fs-lg);

      }

      h4 {
        font-size: var(--fs-md);

      }

      p {
        margin: 0 0 var(--space-4);
        color: var(--c-text-dim);
        font-size: var(--fs-base);
      }

      p + p {
        margin-top: var(--space-4);
      }

      strong {
        color: var(--c-text);
        font-weight: 600;
      }

      a * {
        color: inherit;
      }

      /* Links */
      a {
        color: var(--c-accent);
        text-decoration: underline;
        text-underline-offset: 3px;
        text-decoration-thickness: var(--border-width);
        transition: color var(--transition-fast);
      }

      a:hover {
        color: var(--c-accent);
        text-decoration: none;
      }

      *:focus-visible {
        outline: var(--border-width-thick) solid var(--c-accent);
        outline-offset: 2px;
      }

      /* Container */
      .container {
        width: 100%;
        max-width: var(--max-width);
        margin: 0 auto;
        padding: var(--space-4);
        flex: 1;
      }

      /* Lists */
      ul,
      ol {
        margin-bottom: var(--space-4);
        padding-left: var(--space-4);
        color: var(--c-text-dim);
      }

      li {
        margin-bottom: var(--space-2);
        padding-left: var(--space-2);
      }

      /* Code Blocks */
      code,
      pre {
        font-family: inherit;
        font-size: 0.95em;
      }

      pre {
        background: var(--c-surface-alt);
        padding: var(--space-4);
        overflow-x: auto;
        margin: 0 0 var(--space-4);
        border: var(--border-width) solid var(--c-border);
      }

      pre code {
        background: transparent;
        padding: 0;
        color: var(--c-text);
      }

      /* Inline code */
      p code,
      li code {
        background: var(--c-surface-alt);
        padding: 0.2em 0.4em;
        color: var(--c-text);
        border: var(--border-width) solid var(--c-border);
      }

      /* Tables */
      table {
        width: 100%;
        border-collapse: collapse;
        margin: var(--space-4) 0;
        border: var(--border-width) solid var(--c-border);
        background: var(--c-surface);
      }

      th,
      td {
        padding: var(--space-3) var(--space-4);
        text-align: left;
        border-bottom: var(--border-width) solid var(--c-border);
      }

      th {
        background: var(--c-surface-alt);
        color: var(--c-text);
        font-weight: 600;
        text-transform: uppercase;
        font-size: var(--fs-xs);
        letter-spacing: 0.05em;
      }

      tr:last-child td {
        border-bottom: none;
      }

      /* Horizontal Rule */
      hr {
        border: 0;
        height: var(--border-width);
        background: var(--c-border);
        margin: var(--space-10) 0;
      }


      /* Content Page Specifics */
      .content-page .container {
        padding-top: var(--space-4);
      }


      /* Blockquotes */
      blockquote {
        border-left: var(--border-width-thick) solid var(--c-accent);
        padding: var(--space-3) var(--space-4);
        margin: var(--space-4) 0;
        background: var(--c-surface);
      }

      blockquote p {
        margin-bottom: var(--space-2);
      }

      blockquote p:last-child {
        margin-bottom: 0;
      }

      /* Footer */
      .site-footer {
        border-top: var(--border-width) solid var(--c-border);
        margin-top: auto;
        text-align: center;
      }

      .site-footer nav {
        display: flex;
        justify-content: space-between;
        gap: var(--space-4);
      }

      .site-footer nav a {
        color: var(--c-text-dim);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        font-size: var(--fs-xs);
        text-decoration: none;
      }

      .site-footer nav a:hover {
        color: var(--c-accent);
      }

      /* Responsive */
      @media (max-width: 768px) {
        h1 {
          font-size: var(--fs-xl);
        }

        pre {
          margin-left: calc(-1 * var(--space-4));
          margin-right: calc(-1 * var(--space-4));
          border-left: 0;
          border-right: 0;
        }

        table {
          display: block;
          overflow-x: auto;
        }
      }

      @media (max-width: 600px) {
        .site-footer nav {
          flex-direction: column;
          gap: var(--space-3);
        }
      }
    </style>
  </head>
  <body>
    <div>
      <slot />
    </div>
    <footer class="site-footer" transition:persist>
      <div class="container">
        <nav>
          <a href="/faq">FAQ</a>
          <a href="/privacy-policy">Privacy Policy</a>
          <a href="/terms">Terms & Conditions</a>
          <a
            href="https://github.com/alexx855/better-resource-monitor/blob/main/LICENSE"
            target="_blank"
            rel="noopener noreferrer">License</a
          >
          <a
            href="https://github.com/alexx855/better-resource-monitor/issues/new"
            target="_blank"
            rel="noopener noreferrer">Support</a
          >
          <a
            href="https://github.com/alexx855/better-resource-monitor"
            target="_blank"
            rel="noopener noreferrer">GitHub</a
          >
        </nav>
      </div>
    </footer>
  </body>
</html>
