---
import { ClientRouter } from 'astro:transitions';

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="author" content="Alex Pedersen" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.site} />
    <meta property="og:image" content="https://opengraph.githubassets.com/1/alexx855/better-resource-monitor" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://opengraph.githubassets.com/1/alexx855/better-resource-monitor" />

    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="canonical" href={new URL(Astro.url.pathname, Astro.site)} />
    <meta name="robots" content="index, follow" />
    <title>{title}</title>
    <ClientRouter />

    <style is:global>
      :root {
        /* Colors */
        --c-bg: #181818;
        --c-surface: #202020;
        --c-surface-alt: #242424;
        --c-border: #3a3a3a;
        --c-accent: #edbc63;
        --c-text: #fff;
        --c-text-dim: #c5c5c5;

        /* Spacing */
        --space-1: 4px;
        --space-2: 8px;
        --space-3: 12px;
        --space-4: 16px;
        --space-5: 24px;
        --space-6: 32px;
        --space-10: 64px;

        /* Layout */
        --max-width: 900px;
        --touch-target: 44px;
        --border-width: 1px;
        --border-width-thick: 2px;

        /* Typography */
        --fs-xs: 0.75rem;
        --fs-sm: 0.875rem;
        --fs-base: 1rem;
        --fs-md: 1.25rem;
        --fs-lg: 1.5rem;
        --fs-xl: 2rem;
        --fs-2xl: 3rem;

        /* Font */
        --font-mono: ui-monospace, "Cascadia Code", "Source Code Pro", menlo, monospace;

        /* Transitions */
        --transition-fast: 0.1s ease;
      }

      /* Base reset */
      *, *::before, *::after { box-sizing: border-box; }
      html, body { margin: 0; padding: 0; overflow-x: hidden; }
      img, video, iframe { max-width: 100%; height: auto; }

      body {
        font: 400 16px/1.6 var(--font-mono);
        background: var(--c-bg);
        color: var(--c-text);
        -webkit-font-smoothing: antialiased;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      @media (min-width: 700px) { body { font-size: 17px; } }
      @media (min-width: 1100px) { body { font-size: 18px; } }

      /* Typography */
      h1, h2, h3, h4, h5, h6 {
        font: inherit;
        font-weight: 600;
        line-height: 1.2;
        color: var(--c-text);
        margin: 0 0 var(--space-4);
      }

      h1 {
        font-size: var(--fs-2xl);
        text-align: center;
        padding-top: var(--space-10);
        margin-bottom: var(--space-5);
      }

      h2 {
        font-size: var(--fs-xl);
        margin-top: var(--space-10);
        margin-bottom: var(--space-5);
        padding-bottom: var(--space-2);
        border-bottom: var(--border-width) solid var(--c-border);
      }

      h3 {
        font-size: var(--fs-lg);
        margin-top: var(--space-6);
        margin-bottom: var(--space-4);
      }

      h4 {
        font-size: var(--fs-md);
        margin-top: var(--space-5);
        margin-bottom: var(--space-3);
      }

      p {
        margin: 0 0 var(--space-4);
        color: var(--c-text-dim);
        font-size: var(--fs-base);
      }

      p + p { margin-top: var(--space-4); }

      strong {
        color: var(--c-text);
        font-weight: 600;
      }

      /* Links */
      a {
        color: var(--c-accent);
        text-decoration: underline;
        text-underline-offset: 3px;
        text-decoration-thickness: var(--border-width);
        transition: all var(--transition-fast);
        padding: 2px;
      }

      a:hover {
        background-color: var(--c-accent);
        color: var(--c-bg);
        text-decoration: none;
      }

      *:focus-visible {
        outline: var(--border-width-thick) solid var(--c-accent);
        outline-offset: 2px;
      }

      /* Container */
      .container {
        width: 100%;
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 0 var(--space-4);
        flex: 1;
      }

      @media (min-width: 700px) {
        .container {
          padding: 0 var(--space-10);
        }
      }

      /* Lists */
      ul, ol {
        margin-bottom: var(--space-5);
        padding-left: var(--space-5);
        color: var(--c-text-dim);
      }

      li {
        margin-bottom: var(--space-2);
        padding-left: var(--space-2);
      }

      li::marker {
        color: var(--c-text-dim);
      }

      /* Code Blocks */
      code, pre {
        font-family: inherit;
        font-size: 0.95em;
      }

      pre {
        background: var(--c-surface-alt);
        padding: var(--space-4);
        overflow-x: auto;
        margin: 0 0 var(--space-5);
        border: var(--border-width) solid var(--c-border);
      }

      pre code {
        background: transparent;
        padding: 0;
        color: var(--c-text);
      }

      /* Inline code */
      p code, li code {
        background: var(--c-surface-alt);
        padding: 0.2em 0.4em;
        color: var(--c-text);
        border: var(--border-width) solid var(--c-border);
      }

      /* Tables */
      table {
        width: 100%;
        border-collapse: collapse;
        margin: var(--space-5) 0;
        border: var(--border-width) solid var(--c-border);
        background: var(--c-surface);
      }

      th, td {
        padding: var(--space-3) var(--space-4);
        text-align: left;
        border-bottom: var(--border-width) solid var(--c-border);
      }

      th {
        background: var(--c-surface-alt);
        color: var(--c-text);
        font-weight: 600;
        text-transform: uppercase;
        font-size: var(--fs-xs);
        letter-spacing: 0.05em;
      }

      tr:last-child td {
        border-bottom: none;
      }

      /* Horizontal Rule */
      hr {
        border: 0;
        height: var(--border-width);
        background: var(--c-border);
        margin: var(--space-10) 0;
      }

      /* Images */
      p img[width="830"] {
        margin: var(--space-5) 0;
      }

      /* Badge hover */
      p[align="center"] a img {
        transition: opacity var(--transition-fast);
      }

      p[align="center"] a:hover img {
        opacity: 0.85;
      }

      /* Top nav links */
      p[align="center"] a {
        display: inline-block;
        margin: 0 var(--space-2);
        color: var(--c-text-dim);
        font-weight: 500;
      }

      p[align="center"] a:hover {
        color: var(--c-bg);
        background-color: var(--c-accent);
      }

      p[align="center"] {
        color: var(--c-border);
      }

      p[align="center"] span {
        color: var(--c-text-dim);
        font-size: 1.2em;
      }

      /* Content Page Specifics */
      .content-page .container {
        padding-top: var(--space-10);
      }

      .content-page h1 {
        text-align: left;
        margin-bottom: var(--space-5);
        padding-top: 0;
      }

      /* Blockquotes */
      blockquote {
        border-left: var(--border-width-thick) solid var(--c-accent);
        padding: var(--space-3) var(--space-4);
        margin: var(--space-4) 0;
        background: var(--c-surface);
      }

      blockquote p {
        margin-bottom: var(--space-2);
      }

      blockquote p:last-child {
        margin-bottom: 0;
      }

      /* Footer */
      .site-footer {
        border-top: var(--border-width) solid var(--c-border);
        padding: var(--space-6) var(--space-4);
        margin-top: auto;
        text-align: center;
      }

      .site-footer nav {
        display: flex;
        justify-content: center;
        gap: var(--space-5);
        margin-bottom: var(--space-4);
      }

      .site-footer nav a {
        color: var(--c-text-dim);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        font-size: var(--fs-xs);
        text-decoration: none;
      }

      .site-footer nav a:hover {
        color: var(--c-bg);
        background-color: var(--c-accent);
      }

      /* Responsive */
      @media (max-width: 768px) {
        h1 { font-size: var(--fs-xl); }

        pre {
          margin-left: calc(-1 * var(--space-4));
          margin-right: calc(-1 * var(--space-4));
          border-left: 0;
          border-right: 0;
        }

        table {
          display: block;
          overflow-x: auto;
        }
      }

      @media (max-width: 600px) {
        .site-footer nav {
          flex-direction: column;
          gap: var(--space-3);
        }

        /* Hero links: stack and hide dots */
        p[align="center"]:has(a[href="#features"]) {
          display: flex;
          flex-direction: column;
          gap: var(--space-3);
          font-size: 0;
        }

        p[align="center"]:has(a[href="#features"]) a {
          font-size: var(--fs-base);
          display: block;
          padding: var(--space-2);
          background: var(--c-surface);
          border: var(--border-width) solid var(--c-border);
          text-decoration: none;
          text-align: center;
          color: var(--c-text-dim);
        }

        p[align="center"]:has(a[href="#features"]) a:hover {
          border-color: var(--c-accent);
          color: var(--c-accent);
          background: var(--c-surface);
        }

        p[align="center"]:has(a[href="#features"]) span {
          display: none;
        }

        /* Hero buttons stack */
        p[align="center"]:has(img) {
          display: flex;
          flex-direction: column;
          align-items: center;
          gap: var(--space-3);
        }
      }
    </style>
  </head>
  <body>
    <div transition:animate="slide">
      <slot />
    </div>
    <footer class="site-footer" transition:persist>
      <nav>
        <a href="/privacy-policy">Privacy Policy</a>
        <a href="/terms">Terms & Conditions</a>
        <a href="https://github.com/alexx855/better-resource-monitor/blob/main/LICENSE" target="_blank" rel="noopener noreferrer">License</a>
        <a href="https://github.com/alexx855/better-resource-monitor/blob/main/CONTRIBUTING.md" target="_blank" rel="noopener noreferrer">Contributing</a>
        <a href="https://github.com/alexx855/better-resource-monitor/issues/new" target="_blank" rel="noopener noreferrer">Support</a>
        <a href="https://github.com/alexx855/better-resource-monitor" target="_blank" rel="noopener noreferrer">GitHub</a>
      </nav>
    </footer>
  </body>
</html>
