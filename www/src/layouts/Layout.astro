---
import { ClientRouter } from 'astro:transitions';

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="author" content="Alex Pedersen" />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.site} />
    <meta property="og:image" content="https://opengraph.githubassets.com/1/alexx855/better-resource-monitor" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://opengraph.githubassets.com/1/alexx855/better-resource-monitor" />
    
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>{title}</title>
    <ClientRouter />
    
    <style is:global>
      :root {
        --color-bg: #0a0a0b;
        --color-surface: #141416;
        --color-surface-hover: #1c1c1f;
        --color-border: #2a2a2e;
        --color-text: #fafafa;
        --color-text-muted: #9a9a9f;
        --color-accent: #007aff;
        --color-accent-hover: #0056b3;
        --font-sans: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Segoe UI', Roboto, sans-serif;
        --font-mono: 'SF Mono', ui-monospace, 'Cascadia Code', 'Source Code Pro', Menlo, monospace;
      }
      
      *, *::before, *::after {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }
      
      html {
        font-family: var(--font-sans);
        background: var(--color-bg);
        color: var(--color-text);
        scroll-behavior: smooth;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }
      
      body {
        min-height: 100vh;
        line-height: 1.6;
      }
      
      a {
        color: var(--color-accent);
        text-decoration: none;
        transition: color 0.2s ease;
      }
      
      a:hover {
        color: var(--color-accent-hover);
      }
      
      code {
        font-family: var(--font-mono);
        background: var(--color-surface);
        padding: 0.2em 0.4em;
        border-radius: 4px;
        font-size: 0.9em;
      }
      
      pre {
        background: var(--color-surface);
        padding: 1rem;
        border-radius: 8px;
        overflow-x: auto;
        border: 1px solid var(--color-border);
      }
      
      pre code {
        background: none;
        padding: 0;
      }

      /* Content page styles (legal pages, contributing) */
      .content-page {
        background: var(--color-bg);
      }

      .content-page .container {
        width: 100%;
        max-width: 830px;
        margin: 0 auto;
        padding: 2rem 1.5rem;
      }

      .content-page h1,
      .content-page h2,
      .content-page h3 {
        color: var(--color-text);
        font-weight: 600;
        margin-top: 1.5rem;
        margin-bottom: 1rem;
      }

      .content-page h1 { font-size: 2rem; }

      .content-page h2 {
        font-size: 1.5rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid var(--color-border);
      }

      .content-page p {
        margin-bottom: 1rem;
        line-height: 1.6;
      }

      .content-page strong {
        color: var(--color-text);
        font-weight: 600;
      }

      .content-page a {
        text-decoration: underline;
        text-underline-offset: 2px;
      }

      .content-page ul,
      .content-page ol {
        margin: 1rem 0;
        padding-left: 2rem;
      }

      .content-page li {
        margin: 0.375rem 0;
      }

      .content-page .back-link {
        display: inline-block;
        margin-bottom: 1.5rem;
        color: var(--color-text-muted);
        text-decoration: none;
      }

      .content-page .back-link:hover {
        color: var(--color-accent);
      }

      @media (max-width: 600px) {
        .content-page .container {
          padding: 1.25rem 1rem;
        }
      }

      .site-footer {
        border-top: 1px solid var(--color-border);
        padding: 2rem 1.5rem;
        margin-top: 3rem;
        text-align: center;
      }

      .site-footer nav {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
        flex-wrap: wrap;
        margin-bottom: 1rem;
      }

      .site-footer nav a {
        color: var(--color-text-muted);
        font-size: 0.875rem;
        text-decoration: none;
      }

      .site-footer nav a:hover {
        color: var(--color-accent);
      }

      .site-footer p {
        color: var(--color-text-muted);
        font-size: 0.75rem;
      }
    </style>
  </head>
  <body>
    <slot />
    <footer class="site-footer">
      <nav>
        <a href="/privacy-policy">Privacy Policy</a>
        <a href="/terms">Terms & Conditions</a>
        <a href="https://github.com/alexx855/better-resource-monitor" target="_blank" rel="noopener noreferrer">GitHub</a>
      </nav>
      <p>&copy; 2025 Better Resource Monitor</p>
    </footer>
  </body>
</html>
